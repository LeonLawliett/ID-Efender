using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Microsoft.Xna.Framework;
using Microsoft.Xna.Framework.Graphics;

namespace ID_Efender_0._0
{
    class Human
    {
        private Vector2 m_pos;
        private Texture2D m_txr;
        public Rectangle collisionrect;
        private float speed;
        private Vector2 m_velocity;
        private bool abducted;

        //Constructor
        public Human(Texture2D txr, int xpos, int ypos)
        {
            m_txr = txr;
            m_pos = new Vector2(xpos, ypos);
            collisionrect = new Rectangle(xpos, ypos, m_txr.Width, m_txr.Height);
            abducted = false;
            m_velocity = Vector2.Zero;
            speed = 5f;
        }

        public void UpdateMe(Rectangle screensize)
        {
            if (m_pos.X + 6 == screensize.Width)
            {
                m_velocity.X = -speed;
            }

            if (m_pos.X == 0)
            {
                m_velocity.X = speed;
            }

            m_pos += m_velocity;
        }

        public void DrawMe(SpriteBatch sb)
        {
            sb.Draw(m_txr, m_pos, Color.White);
        }
    }
}
